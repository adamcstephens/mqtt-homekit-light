[Unit]
Description=MQTT HomeKit Light service

[Service]
EnvironmentFile=/etc/default/mqtt-homekit-light-%i
ExecStart=/usr/bin/mqtt-homekit-light -storage-path /var/lib/mqtt-homekit-light-%i
Restart=on-failure
RestartSec=10s
DynamicUser=true
StateDirectory=mqtt-homekit-light-%i
User=mhl-%i

[Install]
WantedBy=default.target
